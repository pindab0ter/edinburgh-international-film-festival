<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="4dp" android:insetLeft="4dp" android:insetRight="4dp" android:insetTop="4dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorAccent" />
                <corners android:radius="2dp" />
                <padding android:bottom="8dp" android:left="4dp" android:right="4dp" android:top="8dp" />
            </shape>
        </inset>
    </item>
    <item android:state_checked="false">
        <shape>
            <padding android:bottom="8dp" android:left="4dp" android:right="4dp" android:top="8dp" />
        </shape>
    </item>
</selector>