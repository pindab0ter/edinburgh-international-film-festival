<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="4dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:theme="@style/AppTheme.CardView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_schedule_date"
                style="@style/AppTheme.TextAppearance.ListHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/iv_schedule_image"
                android:includeFontPadding="false"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                tools:text="@string/film_date_long_placeholder" />

            <TextView
                android:id="@+id/tv_schedule_title"
                style="@style/AppTheme.TextAppearance.ListSubhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_schedule_date"
                android:layout_toStartOf="@id/iv_schedule_image"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="12sp"
                tools:text="@string/film_location_placeholder" />

            <ImageView
                android:id="@+id/iv_schedule_image"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/text_margin"
                android:contentDescription="@string/film_image_description"
                tools:scaleType="centerCrop"
                tools:src="@drawable/film_poster" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>