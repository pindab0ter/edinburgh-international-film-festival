<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical"
        android:theme="@style/AppTheme.CardView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_schedule_date"
                style="@style/AppTheme.TextAppearance.ListHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/iv_schedule_image"
                android:includeFontPadding="false"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                tools:text="@string/film_date_long_placeholder" />

            <TextView
                android:id="@+id/tv_schedule_title"
                style="@style/AppTheme.TextAppearance.ListSubhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv_schedule_date"
                android:layout_toStartOf="@id/iv_schedule_image"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:textSize="12sp"
                tools:text="@string/film_title_placeholder" />

            <TextView
                android:id="@+id/tv_venue_name"
                style="@style/AppTheme.TextAppearance.ListSubhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_above="@id/tv_venue_address"
                android:layout_toStartOf="@id/iv_schedule_image"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:textAlignment="viewEnd"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="@string/film_venue_name_placeholder" />

            <TextView
                android:id="@+id/tv_venue_address"
                style="@style/AppTheme.TextAppearance.Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/iv_schedule_image"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:textAlignment="viewEnd"
                android:textSize="10sp"
                tools:text="@string/film_venue_address_placeholder" />

            <ImageView
                android:id="@+id/iv_schedule_image"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/text_margin"
                android:contentDescription="@string/film_image_description"
                tools:scaleType="centerCrop"
                tools:src="@drawable/film_poster" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>