<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Overlay.ColouredActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/toggle_button</item>
        <item name="android:drawableLeft">@drawable/plus_minus</item>
        <item name="android:drawableTint">@color/toggle_button_text</item>
        <item name="android:textColor">@color/toggle_button_text</item>
    </style>


    <style name="AppTheme.Overlay.FilmEventList" parent="ThemeOverlay.AppCompat.Light">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="textAppearanceListItemSmall">@style/TextAppearance.AppCompat.Small</item>
    </style>

</resources>
