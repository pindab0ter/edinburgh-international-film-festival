<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/AppTheme.CardView</item>
    </style>

    <style name="AppTheme.Overlay.ColouredActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/dr_toggle_button</item>
        <item name="android:drawableLeft">@drawable/asl_pathmorph_plusminus</item>
        <item name="android:drawableTint">@color/sl_toggle_button_foreground</item>
        <item name="android:textColor">@color/sl_toggle_button_foreground</item>
        <item name="android:stateListAnimator">@animator/scale</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_nav_bar_text_color</item>
        <item name="itemTextColor">@color/bottom_nav_bar_text_color</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="AppTheme.Overlay.FilmEventList" parent="ThemeOverlay.AppCompat.Light">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="textAppearanceListItemSmall">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="AppTheme.TextAppearance.ListHeader" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.ListSubhead" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Detail" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
